@using Microsoft.AspNetCore.Identity
@using Mascotas.Areas.Identity.Data
@inject SignInManager<UserIdentity> SignInManager
@inject UserManager<UserIdentity> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new {area = ""})" method="post" id="logoutForm">
        <ul class="dropdown-menu-custom text-center">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="btn btn-link navbar-btn navbar-link">@User.Identity.Name</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Cerrar sesión</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="dropdown-menu-custom">
        <li>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-link navbar-btn navbar-link">Registrarse</a>
        </li>
        <li>
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-link navbar-btn navbar-link">Inciar Sesión</a>
        </li>
    </ul>
}
